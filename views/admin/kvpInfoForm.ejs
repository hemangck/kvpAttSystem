<% layout("/layouts/boilerplate") %>

    <body>
        <form id="attendanceForm" action="/<%= userId %>/dashboard/dashboardData/kvpDataForm/manage-data" method="post" class="container mt-5">

            <div class="row">
                <div class="col-md-6">
                    <label for="taluka" class="form-label">Choose Taluka:</label>
                    <select name="formData[Taluka]" id="taluka" class="form-select">
                        <% for (let taluka of Talukas) { %>
                            <option value="<%= taluka %>">
                                <%= taluka %>
                            </option>
                            <% } %>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="school" class="form-label">Choose School:</label>
                    <select name="formData[School]" id="school" class="form-select">
                        <% for (let school of Schools) { %>
                            <option value="<%= school %>">
                                <%= school %>
                            </option>
                            <% } %>
                    </select>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-6">
                    <label for="class" class="form-label">Choose Class:</label>
                    <select name="formData[Class]" id="sClass" class="form-select">
                        <% for (let classKVP of Classes) { %>
                            <option value="<%= classKVP %>">
                                <%= classKVP %>
                            </option>
                            <% } %>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="group" class="form-label">Choose Group:</label>
                    <select name="formData[Group]" id="group" class="form-select">
                        <% for (let group of Groups) { %>
                            <option value="<%= group %>">
                                <%= group %>
                            </option>
                            <% } %>
                    </select>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-6">
                    <label for="hod" class="form-label">Choose HOD:</label>
                    <select name="formData[HOD]" id="hod" class="form-select">
                        <% for (let hod of HODs) { %>
                            <option value="<%= hod %>">
                                <%= hod %>
                            </option>
                            <% } %>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="supV" class="form-label">Choose Supervisor:</label>
                    <select name="formData[Supervisor]" id="supV" class="form-select">
                        <% for (let supV of Supervisors) { %>
                            <option value="<%= supV %>">
                                <%= supV %>
                            </option>
                            <% } %>
                    </select>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-6">
                    <label for="kTai" class="form-label">Choose KishoriTai:</label>
                    <select name="formData[KishoriTai]" id="kTai" class="form-select">
                        <% for (let kTai of KishoriTais) { %>
                            <option value="<%= kTai %>">
                                <%= kTai %>
                            </option>
                            <% } %>
                    </select>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary">SEARCH</button>
                </div>
            </div>
        </form>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    </body>