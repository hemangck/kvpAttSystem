<% layout("/layouts/boilerplate") %>

<body>
    <div class="container mt-3">
        <div class="row">
            <div class="col-8 offset-2">
                <h3>Student Details</h3>
            </div>
        </div>

        <div class="row">
            <div class="card col-6 offset-3">
                <div class="card-body">
                    <p class="card-text">
                        <b><label>Name:</label></b> &nbsp;&nbsp;<%= allKvpData.Sname %> <br>
                        <b><label>Address:</label></b> &nbsp;&nbsp;<%= allKvpData.SAddress %> <br>
                        <b><label>Caste:</label></b> &nbsp;&nbsp;<%= allKvpData.Caste %> <br>
                        <b><label>Sub Caste:</label></b> &nbsp;&nbsp;<%= allKvpData.SubCaste %> <br>
                        <b><label>Contact Number:</label></b> &nbsp;&nbsp;<%= allKvpData.ContactNum %> <br>
                        <b><label>Aadhar Card Number:</label></b> &nbsp;&nbsp;<%= allKvpData.AadharNo %> <br>
                        <b><label>DOB:</label></b> &nbsp;&nbsp;<%= allKvpData.DOB %> <br>
                        <b><label>Taluka:</label></b> &nbsp;&nbsp;<%= allKvpData.Taluka %> <br>
                        <b><label>Standard:</label></b> &nbsp;&nbsp;<%= allKvpData.Std %> <br>
                        <b><label>School:</label></b> &nbsp;&nbsp;<%= allKvpData.School %> <br>
                        <b><label>Class:</label></b> &nbsp;&nbsp;<%= allKvpData.Class %> <br>
                        <b><label>Group:</label></b> &nbsp;&nbsp;<%= allKvpData.Group %> <br>
                        <b><label>HOD:</label></b> &nbsp;&nbsp;<%= allKvpData.HOD %> <br>
                        <b><label>Supervisor:</label></b> &nbsp;&nbsp;<%= allKvpData.Supervisor %> <br>
                        <b><label>Kishori Tai:</label></b> &nbsp;&nbsp;<%= allKvpData.KishoriTai %> <br>
                    </p>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-6 offset-3">
                <div class="btns">
                    <a href="/<%= userId %>/dashboard/dashboardData/crudData/manage-data/<%= allKvpData._id %>/edit" class="btn btn-dark col-1 offset-4 edit-btn">Edit</a>

                    <form action="/<%= userId %>/dashboard/dashboardData/crudData/manage-data/<%= allKvpData._id %>?_method=DELETE" method="post" class="offset-1">
                        <button class="btn btn-dark">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6N6N6jIeHz"
        crossorigin="anonymous"></script>
</body>
