<% layout("/layouts/boilerplate") %>
<style>
    .card {
        display: flex;
        flex-direction: row; /* To keep the row-reverse effect */
        align-items: center;
        background-color: 	#999999;
        color: white;
        border: 2px solid black !important;
        border-radius: 40px !important;
    }
    .card img {
        width: 15vw; /* Adjust the width of the image */
        height: 15vh;
        object-fit: contain;
    }
    .card-body {
        width: 50%; /* Adjust the width of the text container */
        padding: 1rem;
    }
</style>
<body>
    <h1>Welcome to the KVP Dashboard (CLASSROOM)</h1><br>
    <h4>Name of user- <%= name %></h4><br>
    <h5>Role of user- <b><%= role %></b></h5><br>

    <div class="row row-cols-lg-1 row-cols-md-1 row-cols-sm-1">
        <a href="/<%= userId %>/dashboard/dashboardCRoom/regForm" class="listing-link">
            <div class="card">
                <img src="/images/regForm.png" class="card-img-top" alt="listing_image">
                <div class="card-body">
                    <h3><b>Registration Form</b></h3>
                </div>
            </div>
        </a>
    </div>

    <div class="row row-cols-lg-1 row-cols-md-1 row-cols-sm-1">
        <a href="/<%= userId %>/dashboard/dashboardCRoom/prAForm" class="listing-link">
            <div class="card">
                <img src="/images/prAForm.png" class="card-img-top" alt="listing_image">
                <div class="card-body">
                    <h3><b>Pre Assessment Form</b></h3>
                </div>
            </div>
        </a>
    </div>

    <div class="row row-cols-lg-1 row-cols-md-1 row-cols-sm-1">
        <a href="/<%= userId %>/dashboard/dashboardCRoom/attForm" class="listing-link">
            <div class="card">
                <img src="/images/attForm.png" class="card-img-top" alt="attForm_img">
                <div class="card-body">
                    <h3><b>Attendance Form</b></h3>
                </div>
            </div>
        </a>
    </div>

    <div class="row row-cols-lg-1 row-cols-md-1 row-cols-sm-1">
        <a href="/<%= userId %>/dashboard/dashboardCRoom/poAForm" class="listing-link">
            <div class="card">
                <img src="/images/poAForm.png" class="card-img-top" alt="listing_image">
                <div class="card-body">
                    <h3><b>Reports</b></h3>
                </div>
            </div>
        </a>
    </div>

</body>
</html>
